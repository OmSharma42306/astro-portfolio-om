---
import SkillIcon from './SkillIcon';

const skills = {
  Frontend: ['HTML', 'CSS', 'JavaScript', 'React'],
  Backend: ['Node.js', 'Express', 'Flask'],
  Databases: ['MySQL', 'MongoDB', 'PostgreSQL'],
  'Version Control': ['Git', 'GitHub'],
  DevOps: ['Docker'],
  Technologies: ['WebRTC', 'Socket Programming'],
  Tools: ['Vercel', 'Linux', 'Postman'],
  Languages: ['Python', 'C++', 'JavaScript', 'TypeScript']
};

const getIconColor = (skill: string) => {
  const colors: { [key: string]: string } = {
    'HTML': 'text-[#E34F26]',
    'CSS': 'text-[#1572B6]',
    'JavaScript': 'text-[#F7DF1E]',
    'React': 'text-[#61DAFB]',
    'Node.js': 'text-[#339933]',
    'Python': 'text-[#3776AB]',
    'TypeScript': 'text-[#3178C6]',
    'MongoDB': 'text-[#47A248]',
    'PostgreSQL': 'text-[#336791]',
    'Docker': 'text-[#2496ED]',
  };
  return colors[skill] || 'text-gray-400';
};
---

<section id="skills" class="py-20 px-4 md:px-8 lg:px-16">
  <h2 class="text-3xl font-bold mb-12 text-center" data-aos="fade-up">Skills & Technologies</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
    {Object.entries(skills).map(([category, items]) => (
      <div 
        class="relative backdrop-blur-lg bg-white/10 p-6 rounded-lg border border-white/20 shadow-xl hover:bg-white/20 transition-all duration-300" 
        data-aos="fade-up"
      >
        <div class="absolute inset-0 rounded-lg bg-gradient-to-br from-white/5 to-white/0 pointer-events-none"></div>
        <h3 class="text-[var(--accent)] font-semibold mb-4 relative z-10">{category}</h3>
        <ul class="space-y-4 relative z-10">
          {items.map(skill => (
            <li class="flex items-center gap-3 group">
              <SkillIcon skill={skill} color={getIconColor(skill)} client:load />
              <span class="text-gray-300 group-hover:text-white transition-colors duration-200">
                {skill}
              </span>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
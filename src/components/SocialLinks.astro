---
import SocialIcon from './SocialIcon';
import { socialLinks } from '../utils/socialLinks';
---

<div class="fixed left-8 bottom-0 hidden lg:block z-10">
  <div 
    class="flex flex-col items-center gap-4 after:content-[''] after:block after:w-[1px] after:h-32 after:bg-gray-400"
    data-aos="fade-right"
    data-aos-duration="1000"
  >
    {socialLinks.map((social) => (
      <SocialIcon 
        icon={social.icon}
        url={social.url}
        name={social.name}
        color={social.color}
        client:load
      />
    ))}
  </div>
</div>

<!-- Mobile Social Links -->
<div class="lg:hidden flex justify-center gap-6 py-8">
  {socialLinks.map((social) => (
    <SocialIcon 
      icon={social.icon}
      url={social.url}
      name={social.name}
      color={social.color}
      client:load
    />
  ))}
</div>